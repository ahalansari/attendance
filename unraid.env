# Unraid Docker Compose Environment File
# Copy this to .env in your Unraid appdata directory

# Basic Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production-make-it-long-and-random
DEBUG=False
WEB_PORT=8000

# Your Unraid Server IP (change this to your actual Unraid server IP)
UNRAID_IP=192.168.1.100

# Domain Configuration (if using reverse proxy)
DOMAIN_NAME=attendance.local

# Database Configuration
POSTGRES_PASSWORD=your-strong-database-password-here

# Security Settings (for local network deployment)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Allowed Hosts (add your domain if using reverse proxy)
ALLOWED_HOSTS=localhost,127.0.0.1,attendance.local,192.168.1.100

# CSRF Trusted Origins
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://192.168.1.100:8000,http://attendance.local:8000

# Optional: Email Configuration
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
