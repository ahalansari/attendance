# Production Environment Configuration for attendance.qitcare.co
# Copy this to .env in your deployment directory

# Django Settings
SECRET_KEY=your-super-secret-key-change-this-in-production-make-it-50-chars-long
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,attendance.qitcare.co
CSRF_TRUSTED_ORIGINS=https://attendance.qitcare.co,http://localhost:8000

# Database Configuration
POSTGRES_PASSWORD=your-strong-database-password-here
DATABASE_URL=postgresql://attendance_user:your-strong-database-password-here@db:5432/attendance_db

# Redis Cache
REDIS_URL=redis://redis:6379/0

# Domain Configuration
DOMAIN_NAME=attendance.qitcare.co

# Cloudflare Configuration (if using Cloudflare)
USE_CLOUDFLARE=True

# Security Settings for HTTPS
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

